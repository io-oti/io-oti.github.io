{
  // #region editor ------------------------------------------------------------
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.markdownlint": "explicit",
    "source.organizeImports": "never"
  },
  // #endregion ----------------------------------------------------------------
  // #region editor - markdown -------------------------------------------------
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.rulers": [
      80
    ],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
  }
  // #endregion ----------------------------------------------------------------
  // #region editor - vue ------------------------------------------------------
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // #endregion ----------------------------------------------------------------
  // #region explorer ----------------------------------------------------------
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "package.json": "package*, .npm*,",
    "README.md": "*.config.js, .eslint*, .git*",
  },
  // #endregion ----------------------------------------------------------------
  // #region - extensions - Code Spell Checker ---------------------------------
  "cSpell.words": [
    "catppuccin",
    "codepen",
    "frontmatter""giscus",
    "miniprogram",
    "unplugin",
    "wechat",
    "shenzhen",
    "unshift"
    "vite",
    "vitepress",
  ],
  // #endregion ----------------------------------------------------------------
  // #region extensions - learn-markdown ---------------------------------------
  "markdown.showToolbar": true,
  // #endregion ----------------------------------------------------------------
  // #region extensions - markdownlint -----------------------------------------
  "markdownlint.config": {
    "MD025": false,
    "MD028": false,
    "MD033": false,
    "MD041": false,
    "MD045": false,
  },
  // #endregion ----------------------------------------------------------------
  // #region extensions - prettier ---------------------------------------------
  "prettier.bracketSameLine": false,
  "prettier.bracketSpacing": true,
  "prettier.printWidth": 80,
  "prettier.semi": false,
  "prettier.singleAttributePerLine": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  // #endregion ----------------------------------------------------------------
}
